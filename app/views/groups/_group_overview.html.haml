= render "shared/groups/empty_state"
.card.prepend-top-10
  .card-header
    %h4.card-title.inline
      = _('Subgroups and projects')
    = render "shared/groups/search_form"
  %ul.content-list.subgroups-and-projects
    .js-groups-list-holder
      #js-groups-overview-children-tree{ data: { hide_projects: 'false', group_id: group.id, endpoint: group_children_path(group, format: :json), path: group_path(group), form_sel: 'form#group-filter-form', filter_sel: '.js-groups-list-filter', holder_sel: '.js-groups-list-holder', dropdown_sel: '.js-group-filter-dropdown-wrap' } }
        .loading-container.text-center
          = icon('spinner spin 2x', class: 'loading-animation prepend-top-20')
  .card-footer.text-center.hidden
    = link_to _('Show more subgroups and projects'), group_subgroups_path

.card.prepend-top-10
  .card-header
    %h4.card-title.inline
      = _('Shared projects')
    = render "shared/groups/search_form"
  %ul.content-list.shared-projects
    .js-groups-list-holder
      #js-groups-overview-shared-tree{ data: { hide_projects: 'false', group_id: group.id, endpoint: group_children_path(group, format: :json), path: group_path(group), form_sel: 'form#group-filter-form', filter_sel: '.js-groups-list-filter', holder_sel: '.js-groups-list-holder', dropdown_sel: '.js-group-filter-dropdown-wrap' } }
        .loading-container.text-center
          = icon('spinner spin 2x', class: 'loading-animation prepend-top-20')
  .card-footer.text-center.hidden
    = link_to _('Show more shared projects'), group_shared_path

